<UserControl x:Class="KanbanToDoListMVVM.Views.Views.WinMainPanle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KanbanToDoListMVVM.Views.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900" Width="900" Height="600">
    <DockPanel Margin="20,20,20,36">

        <!-- Top bar -->
        <Grid DockPanel.Dock="Top" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- Left side for buttons -->
                <ColumnDefinition Width="Auto" />
                <!-- Right side for clock -->
            </Grid.ColumnDefinitions>

            <!-- Buttons on the left -->
            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <!-- Users List button -->
                <Button Content="Users List" Margin="5" 
                Padding="12 6" FontWeight="Bold" Foreground="White" 
                Background="#0078D7" BorderBrush="#005A9E" BorderThickness="1" Cursor="Hand"
                Command="{Binding ButtomUsersList}" 
                      
                        
        />

                <!-- Log Out button -->
                <Button Content="Log Out" Margin="5" 
                Padding="12 6" FontWeight="Bold" Foreground="White" 
                Background="#107C10" BorderBrush="#0B5C0B" BorderThickness="1" Cursor="Hand"
               
                Command="{Binding ButtomLogOut}"
        />

                <!-- New Task button -->
                <Button Content="New Task" Margin="5" 
                Padding="14 8" FontWeight="Bold" Foreground="White" 
                Background="#E81123" BorderBrush="#B50D1E" BorderThickness="1" Cursor="Hand"
                Command="{Binding ButtomCreateTask}"
        />
            </StackPanel>

            <!-- Live clock on the right -->
            <TextBlock x:Name="txtClock" FontWeight="Bold" FontSize="14" 
               Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Right"
               Grid.Column="1" Margin="0,0,40,0"/>
            <!-- Clock updates every second -->
        </Grid>


        <!-- Main Panel -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- ToDo -->
                <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="3">
                    <DockPanel>
                        <TextBlock Text="ToDo" FontWeight="Bold" FontSize="14"
                            DockPanel.Dock="Top" TextAlignment="Center" Margin="5"/>

                        <ItemsControl ItemsSource="{Binding ToDoTasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding TitleButtom}" Width="100" Height="45" Background="#E91E63"
                                            Foreground="White" Margin="5" FontSize="12" FontWeight="Bold" 
                                            Command="{Binding DataContext.TaskClickCommand,RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </DockPanel>
                </Border>
               
                
                <!-- Doing -->
                <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="3">
                    <DockPanel>
                        <TextBlock Text="Doing" FontWeight="Bold" FontSize="14"
                            DockPanel.Dock="Top" TextAlignment="Center" Margin="5"/>

                        <ItemsControl ItemsSource="{Binding DoingTasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding Title}" Width="100" Height="45" Background="#E91E63"
                                            Foreground="White" Margin="5" FontSize="12" FontWeight="Bold" 
                                            Command="{Binding DataContext.TaskClickCommand,RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </DockPanel>
                </Border>

                <!-- Review -->
                <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1" Margin="3">
                    <DockPanel>
                        <TextBlock Text="Review" FontWeight="Bold" FontSize="14"
                            DockPanel.Dock="Top" TextAlignment="Center" Margin="5"/>

                        <ItemsControl ItemsSource="{Binding ReviewTasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding Title}" Width="100" Height="45" Background="#E91E63"
                                            Foreground="White" Margin="5" FontSize="12" FontWeight="Bold" 
                                            Command="{Binding DataContext.TaskClickCommand,RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </DockPanel>
                </Border>


                <!-- Done -->
                <Border Grid.Column="3" BorderBrush="Black" BorderThickness="1" Margin="3">
                    <DockPanel>
                        <TextBlock Text="Done" FontWeight="Bold" FontSize="14"
                            DockPanel.Dock="Top" TextAlignment="Center" Margin="5"/>

                        <ItemsControl ItemsSource="{Binding DoneTasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding Title}" Width="100" Height="45" Background="#E91E63"
                                            Foreground="White" Margin="5" FontSize="12" FontWeight="Bold" 
                                            Command="{Binding DataContext.TaskClickCommand,RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </DockPanel>
                </Border>

                <!-- Cancelled -->
                <Border Grid.Column="4" BorderBrush="Black" BorderThickness="1" Margin="3">
                    <DockPanel>
                        <TextBlock Text="Cancelled" FontWeight="Bold" FontSize="14"
                            DockPanel.Dock="Top" TextAlignment="Center" Margin="5"/>

                        <ItemsControl ItemsSource="{Binding CancelledTasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding Title}" Width="100" Height="45" Background="#E91E63"
                                            Foreground="White" Margin="5" FontSize="12" FontWeight="Bold" 
                                            Command="{Binding DataContext.TaskClickCommand,RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </DockPanel>
                </Border>
                
                
                
            </Grid>
        </ScrollViewer>
    </DockPanel>
    
    
</UserControl>
