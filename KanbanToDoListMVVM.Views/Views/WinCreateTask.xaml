<UserControl x:Class="KanbanToDoListMVVM.Views.Views.WinCreateTask"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KanbanToDoListMVVM.Views.Views"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600" Width="600" Height="400">

    <Border BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="6" Padding="10">
        <Grid>

            <!-- Columns -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Rows -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- **** Users Section **** -->
            <GroupBox Header="Users" FontWeight="Bold" Grid.Column="0" Margin="5">
                <DockPanel>

                    <!-- Search TextBox -->
                    <TextBox DockPanel.Dock="Top" Margin="5"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

                    <!-- Users List -->
                    <ListView Margin="5" ItemsSource="{Binding UsersList}" SelectedItem="{Binding SelectedUser}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="User" Width="150" DisplayMemberBinding="{Binding UserName}" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                </DockPanel>
            </GroupBox>


            <!-- **** Task Section **** -->
            <GroupBox Header="Task" FontWeight="Bold" Grid.Column="1" Margin="5">

                <StackPanel Margin="10">

                    <!-- Title -->
                    <StackPanel Orientation="Horizontal" Margin="0 5">
                        <TextBlock Text="Title :" Width="50" VerticalAlignment="Center"/>
                        <TextBox Width="235" Margin="5"
                                 Text="{Binding TaskTitle, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Duration -->
                    <StackPanel Orientation="Horizontal" Margin="0 5">
                        <TextBlock Text="Duration :" Width="50" VerticalAlignment="Center"/>
                        <TextBox Width="40" Margin="5"
                                 Text="{Binding TaskDuration, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Info -->
                    <StackPanel Orientation="Horizontal" Margin="0 5">
                        <TextBlock Text="Info :" Width="50" VerticalAlignment="Top"/>
                        <TextBox Width="235" Height="200" Margin="5"
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 Text="{Binding TaskDescription, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                </StackPanel>

            </GroupBox>



            <Grid Grid.Column="1" Grid.Row="1">

                <!--  Create Button  -->
                <Button Content="Create" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" Margin="10,8,10,10" FontWeight="Bold"
                        Width="120" Height="40" Background="#FF007F" Foreground="White"  BorderThickness="0"
                        Cursor="Hand" Command="{Binding SubmitAddTask}" />
                
                <!-- Back -->
                <Button Content="Back" Margin="98,7,138,9" 
                    Height="41" FontWeight="Bold" Foreground="White" 
                    Background="#17A2B8" BorderBrush="#005A9E" BorderThickness="1" Cursor="Hand"
                    Command="{Binding BackToMainPanelCommand}" Grid.Column="1" Grid.Row="1" RenderTransformOrigin="0.883,0.875"
                    />
                <Label FontWeight="Bold" FontSize="16" FontFamily="B Titr" Margin="-217,0,374,0" Foreground="#DC3545" Content="{Binding CheckValidationLabal}"/>

            </Grid>

        </Grid>
    </Border>

</UserControl>
