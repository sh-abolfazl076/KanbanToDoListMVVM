<UserControl x:Class="KanbanToDoListMVVM.Views.Views.WinPermissionUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KanbanToDoListMVVM.Views.Views"
             mc:Ignorable="d" 
             d:DesignHeight="291" d:DesignWidth="203" Height="291" Width="308">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="{Binding TitlePermission}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- CheckBoxes -->
        <StackPanel Grid.Row="1" Margin="15,10,10,0" VerticalAlignment="Top">

            <CheckBox Content="Add New Task" FontSize="14" Margin="0,5"
              IsChecked="{Binding AddTask, Mode=TwoWay}" />

            <CheckBox Content="Delete Tasks" FontSize="14" Margin="0,5"
              IsChecked="{Binding DeleteTask, Mode=TwoWay}" />

            <CheckBox Content="Manage Users Access" FontSize="14" Margin="0,5"
              IsChecked="{Binding ManageUserAccess, Mode=TwoWay}" />

            <CheckBox Content="Change Task Status" FontSize="14" Margin="0,5"
              IsChecked="{Binding UpdateTask, Mode=TwoWay}" />

        </StackPanel>


        <!-- Save Button -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Command="{Binding SubmitPermssionUser}" Content="Save" Margin="0,0,10,0"  Width="80" Height="30" Background="#4CAF50" Foreground="White" FontWeight="Bold" BorderThickness="0" />
            <Button Command="{Binding BackToUserListButtom}" Content="Back"  Width="80" Height="30" Background="#17A2B8" Foreground="White" FontWeight="Bold" BorderThickness="0" />
        </StackPanel>


    </Grid>
    
</UserControl>
