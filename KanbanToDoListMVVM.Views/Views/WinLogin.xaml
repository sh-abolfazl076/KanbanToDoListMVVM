<UserControl x:Class="KanbanToDoListMVVM.Views.Views.WinLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KanbanToDoListMVVM.Views.Views"
             mc:Ignorable="d" 
             d:DesignHeight="313" d:DesignWidth="350" >
    
    
    <Grid Margin="20,20,20,36">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Welcome !"  FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Inputs -->
        <StackPanel Grid.Row="1" Margin="10,5,10,5" VerticalAlignment="Top" >

            <Label Content="Username" />
            <TextBox Height="25" Margin="0,0,0,10"
                     Text ="{Binding txtUsername , UpdateSourceTrigger=PropertyChanged }"
                     />

            <Label Content="PassWord" />
            <TextBox Height="25" Margin="0,0,0,10"
                         Text ="{Binding txtPassword , UpdateSourceTrigger=PropertyChanged }"
                         />

        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
            <Button Command="{Binding submitConnection}" Content="Connection Check" Name="btnWinConnection" Margin="0,0,0,0" Width="110" Height="30" FontWeight="Bold" Background="#FF9800" Foreground="White" Click="btnWinConnection_Click" />
            <Button Command="{Binding submitSingup}" Content="Sing Up" Name="btnWinRegister" Width="75" Margin="8,0,0,0" Height="30" FontWeight="Bold" Background="#2196F3" Foreground="White" Click="btnWinRegister_Click" />
            <Button Command="{Binding submitLogin}" Content="Login" Name="btnLogin" Width="75" Height="30" Margin="7,0,0,0" FontWeight="Bold" Background="#4CAF50" Foreground="White" Click="btnLogin_Click"/>
        </StackPanel>

    </Grid>
    
</UserControl>
