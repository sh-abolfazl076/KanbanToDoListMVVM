<UserControl x:Class="KanbanToDoListMVVM.Views.Views.WinConnection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KanbanToDoListMVVM.Views.Views"
             mc:Ignorable="d" 
             d:DesignHeight="445" d:DesignWidth="300">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Database Connection" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Inputs -->
        <StackPanel Grid.Row="1" Margin="10" VerticalAlignment="Top" >
            <Label Content="Server"/>
            <TextBox Height="25" Margin="0,0,0,10"
                     Text ="{Binding ServerNameDatabase , UpdateSourceTrigger=PropertyChanged }"
                     />

            <Label Content="Database"/>
            <TextBox Height="25" Margin="0,0,0,10"
                     Text ="{Binding DatabaseName , UpdateSourceTrigger=PropertyChanged }"
                     />

            <Label Content="User"/>
            <TextBox Height="25" Margin="0,0,0,10"
                     Text ="{Binding UsernameDatabase , UpdateSourceTrigger=PropertyChanged }"
                     />

            <Label Content="Password"/>
            <TextBox Text ="{Binding PasswordDatabase , UpdateSourceTrigger=PropertyChanged }" Height="25"/>
        </StackPanel>

        <!-- Button -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Check Connection" Name="btnCheckDB" 
                    Width="140" Height="35" 
                    Background="#2196F3" Foreground="White" 
                    FontWeight="Bold" 
                    Command="{Binding CheckConnection}"            
                    />
        </StackPanel>
    </Grid>
</UserControl>
