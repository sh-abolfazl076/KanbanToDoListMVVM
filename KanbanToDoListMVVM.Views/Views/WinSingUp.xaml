<UserControl x:Class="KanbanToDoListMVVM.Views.Views.WinSingUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KanbanToDoListMVVM.Views.Views"
             mc:Ignorable="d" 
             d:DesignHeight="370" d:DesignWidth="350">
    <Grid Margin="20,20,20,36">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Edit User" Name="txtTitle" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Inputs -->
        <StackPanel Grid.Row="1" Margin="10,5,10,5" VerticalAlignment="Top" >

            <Label Content="Username" />
            <TextBox Height="25" Margin="0,0,0,10"
                      Text ="{Binding TxtUsernameSingUp , UpdateSourceTrigger=PropertyChanged }"/>

            <Label Content="Password" />
            <TextBox Height="25" Margin="0,0,0,10"
                         Text ="{Binding TxtPasswordSingUp , UpdateSourceTrigger=PropertyChanged }"/>

            <Label Content="Confirm Password" />
            <TextBox  Height="25"
                      Text ="{Binding TxtPasswordChekSingUp , UpdateSourceTrigger=PropertyChanged }"/>

        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
            <Button Command="{Binding SubmitAddUser}" Content="Save"  Width="80" Height="30" Margin="0,0,10,0" Background="#4CAF50" Foreground="White" />
            <Button Command="{Binding ButtonBack}" Content="Close"  Width="80" Height="30" Background="#F44336" Foreground="White" />
        </StackPanel>

    </Grid>
</UserControl>
