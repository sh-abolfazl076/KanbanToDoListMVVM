<UserControl x:Class="KanbanToDoListMVVM.Views.Views.WinSingUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KanbanToDoListMVVM.Views.Views"
             mc:Ignorable="d" 
             d:DesignHeight="370" d:DesignWidth="350" Width="350" Height="370">
    <Grid Margin="20,20,20,36">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="{Binding Title}" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Inputs -->
        <StackPanel Grid.Row="1" Margin="10,5,10,5" VerticalAlignment="Top" >

            <Label Content="Username" />
            <TextBox Height="25" Margin="0,0,0,10"
                      Text ="{Binding Username , UpdateSourceTrigger=PropertyChanged }"/>

            <Label Content="Password" />
            <TextBox Height="25" Margin="0,0,0,10"
                         Text ="{Binding Password , UpdateSourceTrigger=PropertyChanged }"/>

            <Label Content="Confirm Password" />
            <TextBox  Height="25"
                      Text ="{Binding PasswordChek , UpdateSourceTrigger=PropertyChanged }"/>
            <Label FontWeight="Bold" FontSize="11" FontFamily="B Titr" Margin="0,0,0,0" Foreground="#DC3545" Content="{Binding CheckPermissionLabal}" Height="40"/>
            
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
            <Button Command="{Binding SubmitAddUserCommand}" Content="Save"  Width="80" Height="30" Margin="0,0,10,0" Background="#4CAF50" Foreground="White" />
            <Button Command="{Binding BackToLoginCommand}" Content="Back"  Width="80" Height="30" Background="#F44336" Foreground="White" />
        </StackPanel>

    </Grid>
</UserControl>
