<UserControl x:Class="KanbanToDoListMVVM.Views.Views.WinEditUserViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KanbanToDoListMVVM.Views.Views"
             mc:Ignorable="d" 
             d:DesignHeight="313" d:DesignWidth="350" Width="350" Height="313">



    <Grid Margin="20,20,20,36">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="{Binding TxtTitleUserEdit}"  FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Inputs -->
        <StackPanel Grid.Row="1" Margin="10,5,10,5" VerticalAlignment="Top" >

            <Label Content="Username" />
            <TextBox Height="25" Margin="0,0,0,10"
                     Text ="{Binding TxtUsernameEdit , UpdateSourceTrigger=PropertyChanged }"
                     />

            <Label Content="PassWord" />
            <TextBox Height="25" Margin="0,0,0,10"
                         Text ="{Binding TxtPasswordEdit , UpdateSourceTrigger=PropertyChanged }"
                         />

        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
            <Button Command="{Binding BackToUserList}" Content="Back"  Width="75" Height="30" Margin="7,0,0,0" FontWeight="Bold" Background="#4C9F50" Foreground="White" />
            <Button Command="{Binding SubmitUserEdit}" Content="Login"  Width="75" Height="30" Margin="7,0,0,0" FontWeight="Bold" Background="#4CAF50" Foreground="White" />
        </StackPanel>

    </Grid>
</UserControl>
