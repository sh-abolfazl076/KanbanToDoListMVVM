<Window x:Class="KanbanToDoListMVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KanbanToDoListMVVM.Views"
        xmlns:view="clr-namespace:KanbanToDoListMVVM.Views.Views"
        xmlns:viewModels="clr-namespace:KanbanToDoListMVVM.ViewModels.ViewModels;assembly=KanbanToDoListMVVM.ViewModels"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" SizeToContent="WidthAndHeight" >

    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type viewModels:LoginViewModel}">
                    <view:WinLogin  Width="330" Height="350" />
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewModels:ConnectionViewModel}">
                    <view:WinConnection  Width="445" Height="400" />
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewModels:SingUpViewModel}">
                    <view:WinSingUp  Width="370" Height="350" />
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewModels:MainPanleViewModel}">
                    <view:WinMainPanle  Width="600" Height="500" />
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewModels:CreateTaskViewModel}">
                    <view:WinCreateTask  Width="400" Height="600" />
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewModels:TaskViewModel}">
                    <view:WinTask  Width="300" Height="400" />
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>

</Window>
